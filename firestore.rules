rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    // Users can only read and write their own data
    match /users/{userId} {
      allow read, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
    }

    // Doctors, Patients, and Surgeries can be read by any authenticated user
    match /doctors/{doctorId} {
      allow read: if isSignedIn();
      // Allow write only if user is a doctor
      allow write: if isSignedIn() && getUserRole(request.auth.uid) == 'doctor';
    }

    match /patients/{patientId} {
      allow read: if isSignedIn();
       // Allow write only if user is a doctor
      allow write: if isSignedIn() && getUserRole(request.auth.uid) == 'doctor';
    }

    match /surgeries/{surgeryId} {
      allow read: if isSignedIn();
       // Allow write only if user is a doctor
      allow write: if isSignedIn() && getUserRole(request.auth.uid) == 'doctor';
    }

    match /messages/{messageId} {
        allow create: if isSignedIn();
        allow read, update: if isSignedIn() && getUserRole(request.auth.uid) == 'doctor';
    }
    
    match /roles/{roleId} {
      allow read: if isSignedIn();
      allow write: if false; // Disallow writing to roles for now
    }
    
    match /operating_rooms/{operatingRoomId} {
       allow read: if isSignedIn();
       allow write: if false;
    }
    
    match /operation_schedules/{operationScheduleId} {
       allow read: if isSignedIn();
       allow write: if false;
    }
  }
}
