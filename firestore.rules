rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    function isDoctor() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'doctor';
    }
    
    function isDoctorAssignedToPatient(patientId) {
       // This rule is a bit tricky without a direct link.
       // We'll check if the doctor is part of any operation schedule for that patient.
       // This is not perfectly efficient but works for this rule structure.
       // A better data model might have an `assignedDoctors` array on the patient document.
       return exists(/databases/$(database)/documents/operation_schedules/{operationId}) where 
              get(/databases/$(database)/documents/operation_schedules/{operationId}).data.patient_id == patientId &&
              get(/databases/$(database)/documents/operation_schedules/{operationId}).data.doctor_id == request.auth.uid;
    }

    // USERS
    match /users/{userId} {
      allow read: if isSignedIn() && (isAdmin() || isUser(userId));
      allow update: if isUser(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'id', 'email', 'created_at']);
      allow create: if isAdmin(); // Only admins can create users directly. Sign-up is separate.
    }

    // DOCTORS
    match /doctors/{doctorId} {
      allow read: if isSignedIn();
      allow update: if isAdmin() || isUser(doctorId);
      allow create: if isAdmin();
    }

    // PATIENTS
    match /patients/{patientId} {
      allow read: if isAdmin() || isDoctorAssignedToPatient(patientId) || isDoctor();
      allow write: if isAdmin();
    }

    // OPERATING ROOMS
    match /ot_rooms/{otId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // RESOURCES
    match /resources/{resId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // MESSAGES
    match /messages/{messageId} {
      allow read, write: if isSignedIn() && (isAdmin() || resource.data.sender_id == request.auth.uid || resource.data.receiver_id == request.auth.uid);
      allow create: if isSignedIn();
    }

    // OPERATION SCHEDULES
    match /operation_schedules/{operationId} {
      allow read: if isAdmin() || (isDoctor() && resource.data.doctor_id == request.auth.uid);
      allow create: if isAdmin();
      allow update: if isAdmin() || (
        isDoctor() &&
        resource.data.doctor_id == request.auth.uid &&
        // Doctors can only update status and remarks
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'remarks', 'updated_at'])
      );
    }
    
    // SURGERY REQUESTS
    match /surgery_requests/{requestId} {
      allow read: if isAdmin() || (isDoctor() && resource.data.requesting_doctor_id == request.auth.uid);
      allow create: if isDoctor();
      allow update: if isAdmin() || (
        isDoctor() &&
        resource.data.requesting_doctor_id == request.auth.uid &&
        // Doctors can only update/cancel if status is 'Pending'
        resource.data.status == 'Pending' &&
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['id', 'requesting_doctor_id', 'created_at'])
      );
      // No delete for requests, they should be 'cancelled'
      allow delete: if false; 
    }
  }
}
