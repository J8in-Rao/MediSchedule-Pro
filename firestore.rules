rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserRole(userId) {
      return exists(/databases/$(database)/documents/users/$(userId))
        ? get(/databases/$(database)/documents/users/$(userId)).data.role
        : null;
    }

    function isAdmin() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'admin';
    }

    function isDoctor() {
      return isSignedIn() && getUserRole(request.auth.uid) == 'doctor';
    }

    // Optional helper if patient has assignedDoctors array
    function isDoctorAssignedToPatient(patientId) {
      return get(/databases/$(database)/documents/patients/$(patientId))
               .data.assignedDoctors.hasAny([request.auth.uid]);
    }

    // USERS
    match /users/{userId} {
      allow read: if isSignedIn() && (isAdmin() || request.auth.uid == userId);
      allow update: if isSignedIn() && request.auth.uid == userId &&
                    !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']);
      allow create: if isAdmin();
    }

    // DOCTORS
    match /doctors/{doctorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // PATIENTS
    match /patients/{patientId} {
      allow read: if isAdmin() || (isDoctor() && isDoctorAssignedToPatient(patientId));
      allow write: if isAdmin();
    }

    // OPERATING ROOMS
    match /operating_rooms/{otId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // RESOURCES
    match /resources/{resId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // MESSAGES
    match /messages/{messageId} {
      allow read: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin();
    }

    // OPERATIONS
    match /operations/{opId} {
      allow read: if isAdmin() || (isDoctor() && resource.data.doctorId == request.auth.uid);
      allow create: if isAdmin();
      allow update: if isAdmin() || (
        isDoctor() &&
        resource.data.doctorId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'remarks'])
      );
    }
  }
}

