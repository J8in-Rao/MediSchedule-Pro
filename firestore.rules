rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can only read their own profile, admins can read any
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if request.auth.uid == userId || isAdmin();
    }
    
    // Doctors can only read their own profile, admins can read any
    match /doctors/{doctorId} {
       allow read: if request.auth.uid == doctorId || isAdmin();
       allow write: if request.auth.uid == doctorId || isAdmin();
    }

    // Patients can only be managed by admins
    match /patients/{patientId} {
      allow read, write: if isAdmin();
    }
    
    // Operating rooms can only be managed by admins
    match /ot_rooms/{otId} {
       allow read, write: if isAdmin();
    }
    
    // Resources can only be managed by admins
    match /resources/{resourceId} {
       allow read, write: if isAdmin();
    }
    
    // Operation Schedules can be read by the assigned doctor or any admin
    // Writes are admin-only
    match /operation_schedules/{operationId} {
      allow read: if request.auth.uid == resource.data.doctor_id || isAdmin();
      allow write: if isAdmin();
    }
    
    // Surgery requests
    match /surgery_requests/{requestId} {
      // Doctor can create a request for themself
      allow create: if request.auth.uid == request.resource.data.requesting_doctor_id;
      // Doctor can read their own requests, admins can read all
      allow read: if request.auth.uid == resource.data.requesting_doctor_id || isAdmin();
      // Doctor can update their own request only if it is 'Pending'
      // Admins can update any request (e.g. to change status to 'Scheduled' or 'Rejected')
      allow update: if (request.auth.uid == resource.data.requesting_doctor_id && resource.data.status == 'Pending') || isAdmin();
    }
    
    // Messages
    match /messages/{messageId} {
        // A user can create a message if they are the sender
        allow create: if request.auth.uid == request.resource.data.sender_id;
        
        // A user can read messages where they are the sender or receiver. Admins can read all.
        allow read: if request.auth.uid == resource.data.sender_id || request.auth.uid == resource.data.receiver_id || isAdmin();
    }

  }
}
