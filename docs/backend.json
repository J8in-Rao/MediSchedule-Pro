{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the MediSchedule Pro application, which can be an admin or a doctor.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "First name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user."
        },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": [
            "admin",
            "doctor"
          ]
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the user account was created."
        },
        "isActive": {
          "type": "boolean",
          "description": "Whether the user account is active or disabled."
        }
      },
      "required": [
        "id",
        "email",
        "firstName",
        "lastName",
        "role",
        "created_at",
        "isActive"
      ]
    },
    "Doctor": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Doctor",
      "type": "object",
      "description": "Represents a doctor's professional profile.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the doctor, same as the user ID."
        },
        "name": {
          "type": "string",
          "description": "The doctor's full name."
        },
        "email": {
          "type": "string",
          "description": "Doctor's login email.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "Doctor's contact phone number."
        },
        "specialization": {
          "type": "string",
          "description": "The doctor's medical specialization."
        },
        "shift_hours": {
          "type": "string",
          "description": "e.g., 9AM-5PM"
        },
        "availability": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Days of the week the doctor is available."
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri"
        },
        "verified": {
          "type": "boolean",
          "description": "Whether the doctor's profile has been verified by an admin."
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the doctor profile was created."
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "specialization",
        "shift_hours",
        "availability",
        "avatarUrl",
        "verified",
        "created_at"
      ]
    },
    "Patient": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Patient",
      "type": "object",
      "description": "Represents a patient record.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the patient."
        },
        "name": {
          "type": "string",
          "description": "The patient's name."
        },
        "age": {
          "type": "number"
        },
        "gender": {
          "type": "string",
          "enum": [
            "Male",
            "Female",
            "Other"
          ]
        },
        "case_description": {
          "type": "string",
          "description": "Diagnosis or reason for operation."
        },
        "contact": {
          "type": "string",
          "description": "Patient's contact information (phone or email)."
        },
        "admitted_on": {
          "type": "string",
          "format": "date"
        },
        "created_by": {
          "type": "string",
          "description": "UID of the admin who created the record."
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "name",
        "age",
        "gender",
        "case_description",
        "admitted_on",
        "created_by",
        "created_at"
      ]
    },
    "OperationSchedule": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OperationSchedule",
      "description": "Represents a scheduled surgery.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "doctor_id": { "type": "string", "description": "FK -> /doctors/{uid}" },
        "patient_id": { "type": "string", "description": "FK -> /patients/{id}" },
        "ot_id": { "type": "string", "description": "FK -> /ot_rooms/{id}" },
        "date": { "type": "string", "format": "date" },
        "start_time": { "type": "string", "format": "time" },
        "end_time": { "type": "string", "format": "time" },
        "procedure": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["scheduled", "completed", "cancelled"]
        },
        "anesthesia_type": { "type": "string" },
        "anesthesiologist": { "type": "string" },
        "assistant_surgeon": { "type": "string" },
        "nurses": { "type": "array", "items": { "type": "string" } },
        "remarks": { "type": "string" },
        "report_url": { "type": "string", "format": "uri" },
        "drugs_used": { "type": "array", "items": { "type": "string" } },
        "instruments": { "type": "array", "items": { "type": "string" } },
        "created_by": { "type": "string", "description": "UID of the admin who created the schedule." },
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" }
      },
      "required": [
        "doctor_id",
        "patient_id",
        "ot_id",
        "date",
        "start_time",
        "end_time",
        "procedure",
        "status",
        "anesthesia_type",
        "anesthesiologist",
        "created_by",
        "created_at",
        "updated_at"
      ]
    },
    "OperatingRoom": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OperatingRoom",
      "description": "Represents an operating theater (OT).",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "room_number": { "type": "string" },
        "status": { "type": "string", "enum": ["available", "in-use"] },
        "capacity": { "type": "number" },
        "equipment": { "type": "array", "items": { "type": "string" } },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["room_number", "status", "created_at"]
    },
    "Resource": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Resource",
      "description": "Represents a medical resource like a drug or instrument.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["drug", "instrument", "material"] },
        "quantity": { "type": "number" },
        "unit": { "type": "string" },
        "in_use": { "type": "boolean" },
        "last_used": { "type": "string", "format": "date-time" },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "type", "quantity", "in_use", "created_at"]
    },
    "Message": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Message",
      "description": "Represents a message in the system.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "sender_id": { "type": "string" },
        "receiver_id": { "type": "string" },
        "text": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "read": { "type": "boolean" },
        "type": { "type": "string", "enum": ["system", "manual"] }
      },
      "required": ["sender_id", "text", "timestamp", "read", "type"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores all user login accounts."
        }
      },
      {
        "path": "/doctors/{doctorId}",
        "definition": {
          "schema": { "$ref": "#/entities/Doctor" },
          "description": "Stores detailed doctor profiles."
        }
      },
      {
        "path": "/patients/{patientId}",
        "definition": {
          "schema": { "$ref": "#/entities/Patient" },
          "description": "Stores patient records."
        }
      },
      {
        "path": "/ot_rooms/{otId}",
        "definition": {
          "schema": { "$ref": "#/entities/OperatingRoom" },
          "description": "Stores details of operating rooms."
        }
      },
      {
        "path": "/operation_schedules/{operationId}",
        "definition": {
          "schema": { "$ref": "#/entities/OperationSchedule" },
          "description": "Stores all surgery schedules."
        }
      },
      {
        "path": "/resources/{resourceId}",
        "definition": {
          "schema": { "$ref": "#/entities/Resource" },
          "description": "Stores medical resources."
        }
      },
      {
        "path": "/messages/{messageId}",
        "definition": {
          "schema": { "$ref": "#/entities/Message" },
          "description": "Stores system and user messages."
        }
      }
    ]
  }
}

    