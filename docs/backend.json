{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the MediSchedule Pro application, which can be an admin or a doctor.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "First name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user."
        },
        "role": {
          "type": "string",
          "description": "The role of the user.",
          "enum": [
            "admin",
            "doctor"
          ]
        }
      },
      "required": [
        "id",
        "email",
        "role"
      ]
    },
    "Doctor": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Doctor",
      "type": "object",
      "description": "Represents a doctor with specific specializations and availability.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the doctor, should be the same as the user ID."
        },
        "name": {
          "type": "string",
          "description": "The doctor's full name."
        },
        "email": {
          "type": "string",
          "description": "Doctor's login email.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "Doctor's contact phone number."
        },
        "specialization": {
          "type": "string",
          "description": "The doctor's medical specialization."
        },
        "shift_hours": {
          "type": "string",
          "description": "e.g., 9AM-5PM"
        },
        "availability": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Details regarding the doctor's availability."
        },
        "avatarUrl": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "specialization",
        "availability",
        "shift_hours",
        "avatarUrl"
      ]
    },
    "Patient": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Patient",
      "type": "object",
      "description": "Represents a patient record, including pre- and post-operative information.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the patient."
        },
        "name": {
          "type": "string",
          "description": "The patient's name."
        },
        "age": {
          "type": "number"
        },
        "gender": {
          "type": "string",
          "enum": [
            "Male",
            "Female",
            "Other"
          ]
        },
        "case_description": {
          "type": "string",
          "description": "Diagnosis or reason for operation."
        },
        "admitted_on": {
          "type": "string",
          "format": "date"
        }
      },
      "required": [
        "id",
        "name",
        "age",
        "gender",
        "case_description",
        "admitted_on"
      ]
    },
    "OperationSchedule": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OperationSchedule",
      "description": "Represents a scheduled surgery.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "patientId": { "type": "string" },
        "patientName": { "type": "string" },
        "doctorId": { "type": "string" },
        "doctorName": { "type": "string" },
        "otId": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "startTime": { "type": "string", "format": "time" },
        "endTime": { "type": "string", "format": "time" },
        "procedure": { "type": "string" },
        "status": {
          "type": "string",
          "enum": ["Scheduled", "Completed", "Cancelled", "In Progress"]
        },
        "anesthesiaType": { "type": "string" },
        "anesthesiologistName": { "type": "string" },
        "assistantSurgeon": { "type": "string" },
        "nurses": { "type": "array", "items": { "type": "string" } },
        "remarks": { "type": "string" },
        "report_url": { "type": "string", "format": "uri" },
        "drugs_used": { "type": "array", "items": { "type": "string" } },
        "instruments": { "type": "array", "items": { "type": "string" } }
      },
      "required": [
        "patientId",
        "patientName",
        "doctorId",
        "doctorName",
        "otId",
        "date",
        "startTime",
        "endTime",
        "procedure",
        "status",
        "anesthesiaType",
        "anesthesiologistName"
      ]
    },
    "OperatingRoom": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OperatingRoom",
      "description": "Represents an operating theater (OT).",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "room_number": { "type": "string" },
        "capacity": { "type": "number" },
        "status": { "type": "string", "enum": ["Available", "Occupied", "Maintenance"] }
      },
      "required": ["room_number", "status"]
    },
    "Resource": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Resource",
      "description": "Represents a medical resource like a drug or instrument.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["Drug", "Instrument", "Material"] },
        "quantity": { "type": "number" },
        "in_use": { "type": "boolean" }
      },
      "required": ["name", "type", "quantity", "in_use"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "schema": { "$ref": "#/entities/User" },
          "description": "Stores user profiles including their role (admin or doctor)."
        }
      },
      {
        "path": "/doctors/{doctorId}",
        "definition": {
          "schema": { "$ref": "#/entities/Doctor" },
          "description": "Stores detailed doctor profiles. Managed by admins."
        }
      },
      {
        "path": "/patients/{patientId}",
        "definition": {
          "schema": { "$ref": "#/entities/Patient" },
          "description": "Stores patient records. Managed by admins."
        }
      },
      {
        "path": "/operations/{operationId}",
        "definition": {
          "schema": { "$ref": "#/entities/OperationSchedule" },
          "description": "Stores surgery schedules. Writable by admins, readable by assigned doctors."
        }
      },
      {
        "path": "/operating_rooms/{otId}",
        "definition": {
          "schema": { "$ref": "#/entities/OperatingRoom" },
          "description": "Stores details of operating rooms. Managed by admins."
        }
      },
      {
        "path": "/resources/{resourceId}",
        "definition": {
          "schema": { "$ref": "#/entities/Resource" },
          "description": "Stores medical resources. Managed by admins."
        }
      }
    ]
  }
}
